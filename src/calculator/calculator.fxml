<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="calculator.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10">
        <Label fx:id="expression" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="160"/>
        <Button fx:id="clear" text="Clear" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="60" onAction="#clearText"/>
        <Button fx:id="c" text="C" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="60" onAction="#onCalculator"/>
    </HBox>

    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="20">
        <Button fx:id="one" text="1" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="two" text="2" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="three" text="3" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="plus" text="+" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="60" onAction="#processOperator"/>
    </HBox>

    <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="20">
        <Button fx:id="four" text="4" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="five" text="5" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="six" text="6" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="minus" text="-" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="60" onAction="#processOperator"/>
    </HBox>

    <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" spacing="20">
        <Button fx:id="seven" text="7" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="eight" text="8" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="nine" text="9" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="multiply" text="*" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="60" onAction="#processOperator"/>
    </HBox>

    <HBox GridPane.rowIndex="4" GridPane.columnIndex="0" spacing="20">
        <Button fx:id="zero" text="0" GridPane.rowIndex="4" GridPane.columnIndex="0" prefWidth="60" onAction="#processNumbers"/>
        <Button fx:id="divide" text="/" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="60" onAction="#processOperator"/>
        <Button fx:id="equals" text="=" GridPane.rowIndex="4" GridPane.columnIndex="2" prefWidth="60" onAction="#processOperator"/>
        <Button fx:id="delete" text="Delete" GridPane.rowIndex="4" GridPane.columnIndex="3" prefWidth="60"/>
    </HBox>


</GridPane>